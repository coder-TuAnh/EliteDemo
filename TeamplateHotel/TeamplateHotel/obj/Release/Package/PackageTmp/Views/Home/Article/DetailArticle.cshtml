                        @foreach (var item in acticelhot.Take(4))
                        {
                            <div class="item_view">
                                <a href="">
                                    <img src="@item.Image">
                                    <div class="text_view">
                                        <h5>@item.Title</h5>
                                        <small>@DateTime.Now.ToLongDateString()</small>
                                    </div>
                                </a>
                            </div>
                        }

                    </div>
                    <br />
                    <h3 class="top_post" style="text-transform: uppercase">Top popular Tags</h3>
                    <div class="tags">
                        @foreach (var item in tabArticles)
                        {
