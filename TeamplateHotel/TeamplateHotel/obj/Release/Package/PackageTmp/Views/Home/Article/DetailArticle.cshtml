                <span><a href="@menu.Title">@menu.Title</a></span>
                <span>></span>
                <span>@Model.Article.Title</span>
            </div>
            <div class="col-md-9">
                <div class="title_blogs">
                    <h1>@Model.Article.Title</h1>
                </div>
