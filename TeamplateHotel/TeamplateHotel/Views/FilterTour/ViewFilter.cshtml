@using ProjectLibrary.Database
@using ProjectLibrary.Utility
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using TeamplateHotel.Models
@using PagedList.Mvc;
@model TeamplateHotel.Models.FilterTourModel
@{
    ViewBag.Title = "Filter";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section css
{

    <link rel="stylesheet" type="text/css" href="~/Content/css/demo_tour.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/responsive/demo_tour_res.css">
}

<main>
    <section class="wrapper_main">
        <div class="container">
            <div class="row">
                <div class="col-12 show_control_mobile">
                    <div class="row">
                        <div class="col-6"><button type="" data-toggle="modal" data-target="#sortBy">Sort by <i class="fas fa-sort-down"></i></button></div>
                        <div class="col-6"><button type="" data-toggle="modal" data-target="#fillerResu">Filter Results<i class="fas fa-sort-down"></i></button></div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wrap_left">
                        <h3>Filter Results</h3>
                        <div class="block_search">
                            <h4>Destinations</h4>
                            <div class="tags">

                                @foreach (var item in Model.ListMenuDes)
                                {
                                    <label for="@item.ID">
                                        <input type="checkbox" data-id="@item.ID" name="menu-@item.ID" class="menu-filter">
                                        <span>@item.Title</span>
                                    </label>

                                }

                            </div>
                            <h4>Travel styles in VietNam Tours</h4>
                            <div class="tags">


                                @foreach (var item in Model.ListMenuCate)
                                {

                                    <label for="@item.ID">
                                        <input type="checkbox" data-id="@item.ID" name="activity-@item.ID" class="activity-filter">
                                        <span>@item.Title</span>
                                    </label>

                                }

                            </div>

                        </div>
                    </div>
                    <div class="wrap_lwet wrap_trip">
                        <div class="wrap_one">
                            <a href="" title="">
                                <img src="~/Content/img/demo_tour/trip.png" alt="">
                            </a><br>
                            <b>Know better. Book better. Go better.</b>
                        </div>
                        <div class="wrap_lwet wrap_two">
                            <b>TripAdvisor Traveler Rating</b><br>
                            <span>Based on <b>1,381</b> traveler reviews</span>
                        </div>
                        <div class="wrap_lwet wrap_three">
                            <span><b>TripAdvisor Ranking</b> #3 of 390 Boat Tours & Water Sports in Hanoi</span>
                        </div>
                        <div class="wrap_lwet wrap_two">
                            <span><b>Recent Traveler Review:</b><br>Mar 26, 2019: “Brilliant food tour”</span>
                        </div>
                        <div class="wrap_lwet ">
                            <a href="" title="">Read reviews</a><br>
                            <span>© 2019 TripAdvisor LLC</span>
                        </div>

                    </div>
                </div>

                <div class="col-md-9">
                    <div class="wrap_right">
                        <h3 class="title_wrap_right"><b>135</b> tours visit <b>VietNam Tours</b>, depart on <b>Monday, April 13, 2020</b></h3>

                        <div class="tag_control">
                            <ul>
                                <li style="background-color: #ccc;"><span>Sort by:</span></li>
                                <li><span data-value="0" id="recommend">Recommended</span></li>
                                <li><span data-value="0" id="pricehigh">Price [Low to High]</span></li>
                                <li><span data-value="0" id="pricelow">Price [High to Low]</span> </li>
                            </ul>
                        </div>

                        <div class="wrap_lisst">
                            @*@foreach (var item in Model.result)
                                {
                                    <div class="item_list">
                                        <div class="img_lefft">
                                            <a href="" title="">
                                                <img src="@item.Image" alt="" height="158">
                                            </a>
                                        </div>
                                        <div class="content_right">
                                            <div class="wrap_content_main">
                                                <h3><a href="" title="">@item.Title</a></h3>
                                                <p>@Html.Raw(item.Title)</p>
                                                <span><i class="far fa-map-marker-alt"></i>&nbsp;@item.MetaTitle</span>
                                            </div>
                                            <div class="wrap_price">
                                                <span class="price_old">$@item.Price vnđ</span>
                                                <span class="price_new"> <span class="price">$@item.PriceSale</span> vnđ </span>
                                                <a class="select" href="" title="">Chi tiết</a>
                                            </div>
                                        </div>
                                    </div>
                                }*@

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <input type="radio" hidden value="0" name="price" />
        <input hidden value="0" name="recommend" />

        <div class="pagetion">
            <div class="back_top"><a href="#scroll-topl" title=""><i class="fas fa-arrow-alt-square-up"></i> Back to top</a></div>
            <ul>
                <li class="disabled"><a href="#" title="">First</a></li>
                <li class="disabled"><a href="#" title="">Before</a></li>
                <li class="active"><a href="#" title="">1</a></li>
                <li><a href="#" title="">2</a></li>
                <li><a href="#" title="">3</a></li>
                <li><a href="#" title="">4</a></li>
                <li><a href="#" title="">5</a></li>
                <li><a href="#" title="">Next</a></li>
                <li><a href="#" title="">End</a></li>
            </ul>
        </div>
    </section>
</main>

